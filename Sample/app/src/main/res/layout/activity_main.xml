<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Box One - верхний на всю ширину -->
    <TextView
        android:id="@+id/boxOne"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:text="@string/Box_one"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Контейнер для Box Two и трех боксов в столбец -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <!-- Box Two - левая часть -->
        <TextView
            android:id="@+id/boxTwo"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@color/green"
            android:text="@string/Box_two"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <!-- Три бокса в столбец - правая часть -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
            <!-- Box Three -->
            <TextView
                android:id="@+id/boxThree"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="4dp"
                android:background="@color/box_blue"
                android:text="@string/Box_three"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"/>
            <!-- Box Four -->
            <TextView
                android:id="@+id/boxFour"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/box_purple"
                android:text="@string/Box_four"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold" />
            <!-- Box Five -->
            <TextView
                android:id="@+id/boxFive"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:background="@color/box_red"
                android:text="@string/Box_five"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
        <!-- Box Six - по середине экрана -->
    <TextView
        android:id="@+id/boxSix"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@color/box_deep_orange"
        android:text="@string/Box_six"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center" />

        <!-- TextView внизу -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/Text_view"
        android:textSize="24sp"
        android:background="@color/box_blue"
        android:textColor="#333333"
        android:textStyle="bold"
        android:gravity="center"/>

</LinearLayout>